<h2>Post Crud</h2>
<%= link_to 'Add', new_post_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Published</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.published ? 'Yes' : 'No' %></td>
        <td>
          <% if post.published %>
            <%= link_to 'Unpublish', unpublish_post_path(post), class: 'unpublish-link', method: :put %>
          <% else %>
            <%= link_to 'Publish', publish_post_path(post), class: 'publish-link', method: :put %>
          <% end %>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
